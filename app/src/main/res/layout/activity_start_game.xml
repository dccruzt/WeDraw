<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background_pencil"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:text="test"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_start_game_back_button"
        android:layout_width="@dimen/option_button"
        android:layout_height="@dimen/option_button"
        android:background="@drawable/back"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:layout_gravity="left|top"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nombre"
            android:layout_marginBottom="16dp">

            <upc.edu.pe.wedraw.components.CustomTextView
                android:id="@+id/txtPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="fasdfasdfa"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/name_area_margin"
                android:layout_marginRight="@dimen/name_area_margin"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

        <upc.edu.pe.wedraw.components.CustomTextView
            android:id="@+id/txtHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/waiting_players"
            />
        <Button
            android:id="@+id/activity_start_game_start_button"
            android:layout_width="@dimen/connect_button"
            android:layout_height="@dimen/connect_button"
            android:textSize="@dimen/connect_button_text_size"
            android:background="@drawable/transition_play" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="32dp"
        >

        <Button
            android:id="@+id/activity_start_game_sound_button"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/option_button"
            android:layout_height="@dimen/option_button"
            android:background="@drawable/sound"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/activity_start_game_info_button"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/option_button"
            android:layout_height="@dimen/option_button"
            android:background="@drawable/info"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>

</FrameLayout>
