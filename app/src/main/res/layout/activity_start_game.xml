<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/goBackButton"
        android:layout_width="@dimen/option_button"
        android:layout_height="@dimen/option_button"
        android:layout_marginBottom="16dp"
        android:layout_gravity="left|top"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/text_size_normal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Jugador X"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/waiting_players"
            />
        <Button
            android:id="@+id/activity_start_game_start_button"
            android:layout_width="@dimen/connect_button"
            android:layout_height="@dimen/connect_button"
            android:textSize="@dimen/connect_button_text_size"
            android:enabled="false"
            android:background="@drawable/round_button"
            android:text="@string/play"
            android:backgroundTint="@color/disableButton"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="32dp"
        >

        <Button
            android:id="@+id/activity_input_name_sound_button"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/option_button"
            android:layout_height="@dimen/option_button"
            android:background="@drawable/sound"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/activity_input_name_info_button"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/option_button"
            android:layout_height="@dimen/option_button"
            android:background="@drawable/info"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>

</FrameLayout>
