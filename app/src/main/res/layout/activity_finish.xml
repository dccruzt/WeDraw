<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFinalJuego"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/cargando_punto_marginTop"
    android:background="@drawable/connect_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgLogoInicio"
            android:layout_width="@dimen/inicio_logo_size"
            android:layout_height="@dimen/inicio_logo_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo" />

        <upc.edu.pe.wedraw.components.CustomTextView
            android:textSize="@dimen/inicio_letra"
            android:id="@+id/lblFinalJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="3">

        <ImageView
            android:layout_width="@dimen/finalJuego_trofeo_ancho"
            android:layout_height="@dimen/finalJuego_trofeo_alto"
            android:layout_marginBottom="@dimen/trophy_image_bottom_margin"
            android:src="@drawable/logo_upc"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <upc.edu.pe.wedraw.components.CustomButton
                android:id="@+id/btnSalir"
                style="@style/SmallBaseButton"
                android:layout_marginRight="50dp"
                android:onClick="salir"
                android:text="@string/boton_salir"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <upc.edu.pe.wedraw.components.CustomButton
                android:id="@+id/btnVolver"
                style="@style/SmallBaseButton"
                android:text="@string/boton_volver"
                android:onClick="volverAJugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>